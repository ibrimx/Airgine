---
const {
  name = "Keya Vadgama",
  role = "Designer",
  location = "Living in the Bay Area, but Toronto is home",
  bio = "Designer specializing in brand storytelling and visual design.",
  avatar = "/avatar.jpg",
} = Astro.props;
---

<header class="site-header container">
  <div class="header-top">
    <div class="avatar">
      <img src={avatar} alt={name} width="90" height="90" />
    </div>

    <div class="header-info">
      <h1>{name}</h1>
      <p class="role">{role}</p>
      <p class="location">{location}</p>
    </div>
  </div>

  <div class="header-bio">
    <p>{bio}</p>
  </div>
</header>
