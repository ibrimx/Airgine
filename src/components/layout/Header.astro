---
const {
  name,
  role,
  location,
  bio,
  avatar
} = Astro.props;
---

<header class="profile">
  <div class="profile-top">
    <img src={avatar} alt={name} class="avatar" />

    <div class="meta">
      <h1>{name}</h1>
      <p class="role">{role}</p>
      <p class="location">{location}</p>
    </div>
  </div>

  <p class="bio">{bio}</p>

  <div class="tags">
    <button>About me</button>
    <button>Plumb</button>
    <button>Supermanage</button>
    <button>Marginalia</button>
    <button>SBV</button>
    <button>Logos</button>
    <button>Sketches</button>
  </div>
</header>
