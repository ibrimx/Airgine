---

import type { CardConfig } from "../../../lib/types/layout";

interface Props {
  config: CardConfig;
}

const { config } = Astro.props;
---

<div class="text-card">
  <h3>{config.content.title}</h3>
  {config.content.excerpt && <p>{config.content.excerpt}</p>}
</div>

<style>
.text-card h3 {
  margin-bottom: 10px;
  font-size: 1.2rem;
}

.text-card p {
  opacity: 0.8;
  font-size: 0.95rem;
}
</style>
