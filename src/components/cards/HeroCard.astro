---
import type { CardConfig } from "../../../lib/types/layout";

interface Props {
  config: CardConfig;
}

const { config } = Astro.props;

const bgImage = config.content.cover
  ? `url(${config.content.cover})`
  : "none";
---

<div class="hero-card" style={`background-image:${bgImage}`}>
  <div class="hero-card__overlay">
    <div class="hero-card__content">
      {config.content.type && (
        <span class="hero-card__tag">{config.content.type}</span>
      )}
      <h2 class="hero-card__title">{config.content.title}</h2>
      {config.content.excerpt && (
        <p class="hero-card__excerpt">{config.content.excerpt}</p>
      )}
    </div>
  </div>
</div>

<style>
.hero-card {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 320px;
  background-size: cover;
  background-position: center;
  border-radius: var(--radius-xl);
  overflow: hidden;
  display: flex;
  align-items: flex-end;
}

.hero-card__overlay {
  width: 100%;
  padding: var(--space-lg);
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.75) 0%,
    rgba(0, 0, 0, 0.3) 60%,
    transparent 100%
  );
}

.hero-card__content {
  display: flex;
  flex-direction: column;
  gap: 8px;
  color: #ffffff;
}

.hero-card__tag {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  opacity: 0.7;
}

.hero-card__title {
  margin: 0;
  font-size: 1.75rem;
  font-weight: 700;
  line-height: 1.2;
}

.hero-card__excerpt {
  margin: 0;
  font-size: 0.95rem;
  opacity: 0.85;
  line-height: 1.5;
}
</style>
