---

import type { CardConfig } from "../../../lib/types/layout";

interface Props {
  config: CardConfig;
}

const { config } = Astro.props;

const bgImage = config.content.cover
  ? `url(${config.content.cover})`
  : "none";
---

<div class="hero-card" style={`background-image:${bgImage}`}>
  <div class="overlay">
    <h2>{config.content.title}</h2>
    {config.content.excerpt && <p>{config.content.excerpt}</p>}
  </div>
</div>

<style>
.hero-card {
  position: relative;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  border-radius: 20px;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.overlay {
  width: 100%;
  padding: 20px;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.6),
    rgba(0,0,0,0.2),
    transparent
  );
  color: white;
}

.overlay h2 {
  font-size: 1.6rem;
  margin-bottom: 8px;
}

.overlay p {
  opacity: 0.9;
  font-size: 0.95rem;
}
</style>
