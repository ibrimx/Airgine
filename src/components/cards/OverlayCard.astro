---
import type { CardConfig } from "../../../lib/types/layout";

interface Props {
  config: CardConfig;
}

const { config } = Astro.props as Props;
const { content } = config;
---

<div class="overlay-card">
  <!-- Image Layer -->
  {content.cover && (
    <img
      src={content.cover}
      alt={content.title}
      class="overlay-card__image"
    />
  )}

  <!-- Gradient Overlay -->
  <div class="overlay-card__overlay" />

  <!-- Content -->
  <div class="overlay-card__content">
    {content.type && (
      <span class="overlay-card__tag">{content.type}</span>
    )}
    <h3 class="overlay-card__title">{content.title}</h3>
    {content.excerpt && (
      <p class="overlay-card__excerpt">{content.excerpt}</p>
    )}
  </div>
</div>

<style>
.overlay-card {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 280px;
  border-radius: var(--radius-xl);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* Image Layer */
.overlay-card__image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s cubic-bezier(.2,.8,.2,1);
}

.overlay-card:hover .overlay-card__image {
  transform: scale(1.05);
}

/* Gradient Overlay */
.overlay-card__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.75) 0%,
    rgba(0, 0, 0, 0.3) 50%,
    rgba(0, 0, 0, 0.0) 100%
  );
  z-index: 1;
}

/* Content */
.overlay-card__content {
  position: relative;
  z-index: 2;
  padding: var(--space-lg);
  color: #ffffff;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.overlay-card__tag {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  opacity: 0.7;
}

.overlay-card__title {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 700;
  line-height: 1.3;
}

.overlay-card__excerpt {
  margin: 0;
  font-size: 0.875rem;
  opacity: 0.8;
  line-height: 1.5;

  /* يظهر فقط عند hover */
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease, opacity 0.3s ease;
}

.overlay-card:hover .overlay-card__excerpt {
  max-height: 80px;
}
</style>
