---
import type { CardConfig } from "../../../lib/types/layout";
import CardBase from "../cards/CardBase.astro";

interface Props {
  cards: CardConfig[];
}

const { cards } = Astro.props;
---

<!-- ✅ Fix: air-grid بدل grid — متسق مع grid.css الجديد -->
<div class="air-grid">
  {cards.map((card) => (
    <CardBase config={card} />
  ))}
</div>
